<h3>{{viewTitle}}</h3>

<form action='/carService' method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{carService._id}}">
    <div class="form-group">
        <label>Type of service</label>
        <input type="text" class="form-control" name="serviceName" maxlength="500" placeholder="Engine repair" value="{{carService.serviceName}}">
    </div>
    <div class="form-group">
        <label>Service finish date</label>
        <input type="date" class="form-control" name="dateOfFinish"  placeholder="2021-01-01" value="{{carService.dateOfFinish}}">
    </div>
    <div class="form-group col-md-6">
        <label>Total price in PLN</label>
        <input type="number" class="form-control" name="totalPrice"  maxlength="12" placeholder="2000" value="{{carService.totalPrice}}">

    </div>
    <div class="form-group col-md-6">
        <label>Car id</label>
        <input type="text" class="form-control" name="serviceCar" placeholder="6016ece11566421544936cb5" value="{{carService.serviceCar}}">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info">Submit</button>
        <a class="btn btn-secondary" href="/carService/list">View All</a>
    </div>
</form>
